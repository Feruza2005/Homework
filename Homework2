  cout <<"The temperature in Farenheit is equal to "<< fahrenheit << endl;
  
  
  cout << "PROBLEM 4\n";
  
  int a = 0;
  int b = 0;
  int c = 0;
 
  cout << "Enter a number: " ;
  cin >> a;
  cout << "Enter a number: " ;
  cin >> b;
  cout << "Enter a number: " ;
  cin >> c;
 
  int d = pow(a,b);
  int e = pow (d,c);
  cout << e << endl;
  
  
  cout << "PROBLEM 5\n";
  int N = 0;

