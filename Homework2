  float base = 0;
  float height = 0;
  cout << "Enter the length of the base: " ;
  cin >> base;
  cout << "Enter the length of the height: " ;
  cin >> height;
  float area  = base*height*0.5;
 
  cout <<"The area of triangle is "<< area<< endl;
  
  
  cout << "PROBLEM 3\n";
  
  float temp = 0;
  cout << "The temperature in Celsius: " ;
  cin >> temp;
 
