using std::cin;
using std::endl;

int main()
{
  cout << "PROBLEM 1\n";
  
  int num1 = 0;
  int num2 = 0;
  cout << "Enter an integer number: " ;
  cin >> num1;
  cout << "Enter an integer number again: " ;
  cin >> num2;
  int avg = (num1+num2)/2;
  int product = num1*num2;
  cout << "The result of average is equal to "<< avg<< endl;
  cout << "The result of product is equal to "<<product<< endl;
  
   
