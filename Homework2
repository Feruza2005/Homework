  int P3 = pow (N, 3);
  int P4 = pow (N, 4);
  int P5 = pow (N, 5);
  int P6 = pow (N, 6);
  int P7 = pow (N, 7);
  int P8 = pow (N, 8);
  int P9 = pow (N, 9);
  int P10 = pow (N, 10);

  
  cout << N <<"ˆ1=" << P1<< endl;
